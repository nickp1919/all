{
  "name": "@assessment-hrplatform/all",
  "version": "1.0.1",
  "private": false,
  "description": "Сборник полезных утилит",
  "files": [
    "dist/",
    "tsconfig.json"
  ],
  "main": "dist/",
  "scripts": {
    "clean": "rimraf dist",
    "build:tsc": "ttsc",
    "build:assets": "cpy **/*.{svg,png,jpg} ../dist --cwd=src --parents",
    "build": "npm run clean && npm run build:tsc && npm run build:assets",
    "watch": "tsc -w",
    "lint": "eslint --ext=ts,tsx,js,jsx src",
    "lint:fix": "eslint --ext=ts,tsx,js,jsx --fix src",
    "lint-staged": "lint-staged",
    "start": "run-s watch"
  },
  "repository": "https://github.com/assessment-hrplatform/utils",
  "author": "ridrifews",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/assessment-hrplatform/utils/issues"
  },
  "homepage": "https://github.com/assessment-hrplatform/utils#readme",
  "dependencies": {
    "@hrplatform/utils": "^2.2.1",
    "@pulse/colors": "^3.2.1",
    "@pulse/ui": "^9.1.1",
    "@reach/router": "^1.3.4",
    "@styled-system/css": "^5.1.5",
    "axios": "^0.21.1",
    "lodash.isempty": "^4.4.0",
    "rc-notification": "^4.5.7",
    "rc-tooltip": "^5.1.1",
    "react": "^17.0.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-device-detect": "^1.17.0",
    "react-dom": "^17.0.2",
    "redux-actions": "^2.6.5",
    "redux-mock-store": "^1.5.4",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5",
    "ttypescript": "^1.5.12",
    "typescript-transform-paths": "^3.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/lodash.isempty": "^4.4.6",
    "@types/reach__router": "^1.3.8",
    "@types/react": "^17.0.13",
    "@types/react-custom-scrollbars": "^4.0.8",
    "@types/react-dom": "^17.0.9",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-mock-store": "^1.0.2",
    "@types/styled-components": "^5.1.11",
    "@types/styled-system": "^5.1.12",
    "@types/styled-system__css": "^5.0.16",
    "@typescript-eslint/eslint-plugin": "~4.28.2",
    "@typescript-eslint/eslint-plugin-tslint": "~4.28.2",
    "@typescript-eslint/experimental-utils": "~4.28.2",
    "@typescript-eslint/parser": "~4.28.2",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.0",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-mdx": "^1.13.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --format=table --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
